                                                                                    }
                                                                                } else {
                                                                                    // Regular content
                                                                                    echo $change['content'];
                                                                                }
                                                                                ?>
                                                                            <?php endforeach; ?>
                                                                        <?php endif; ?>
                                                                    </div>
                                                                </li>
                                                            <?php endforeach; ?>
                                                        </ul>
                                                    <?php endif; ?>
                                                </div>
                                            </div>
                                        </li>
                                        <?php
                                    }
                                    
                                    if (!$changes_detected && defined('WP_DEBUG') && WP_DEBUG) {
